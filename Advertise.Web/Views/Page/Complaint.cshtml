@* Generator: MvcView GeneratePrettyNames: true *@
@model Advertise.Core.Models.Complaint.ComplaintCreateViewModel
@{
    Layout = MVC.Shared.Views.SiteLayout.Public._PublicLayout;
    ViewBag.Title = Admin.RegisterComplaints;
}
<div class="dashboard-content">
    <div class="headline buttons primary">
        <h4>@Admin.RegisterComplaints</h4>
    </div>
    <div class="form-box-item profile-form">
        <form id="newComplaint" action="@Url.Action(MVC.Complaint.Create())" method="Post">
            @Html.AntiForgeryToken()

            <div class="input-form">
                <div class="vertical-dashed"></div>
                
                <div class="msg-container">
                    <p class="msg-box regular round-corners-five"></p>
                </div>
                <div class="input-container fixed-height">
                    <label for="Body" class="rl-label tooltipster" title="@Admin.ItShowsComplaintText">@Admin.ComplaintExplanation</label>
                    <span class="field-validation-error" data-valmsg-for="Body" data-valmsg-replace="true"></span>
                    <textarea id="Body" name="Body" class="complaint-textarea" rows="10" cols="30" data-val="true" data-val-required="@Admin.RequiredExplain"></textarea>
                </div>

                <div class="input-container"></div>
            </div>
        </form>
        
        <div class="form-button-container">
            <button form="newComplaint" type="submit" class="form-button right-form-btn ok-button round-corners-five disabled-btn-link">
                <i class="fa fa-save"></i>
                <span>@Admin.Save</span>
            </button>
        </div>
    </div>
</div>