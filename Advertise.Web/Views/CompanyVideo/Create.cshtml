@* Generator: MvcView GeneratePrettyNames: true *@
@model Advertise.Core.Models.CompanyVideo.CompanyVideoCreateViewModel
@{
    Layout = MVC.Shared.Views._ProfileLayout;
    ViewBag.Title = "ایجاد ویدئو";
}
<div class="dashboard-content">
    <div class="headline buttons primary">
        <h4>ذخیره ویدئو</h4>
    </div>
    <div class="form-box-item profile-form">
        <form id="newCompanyVideo" action="@Url.Action(MVC.CompanyVideo.Create())" method="Post" data-on-load="validateCompanyVideo">
            @Html.AntiForgeryToken()
            @Html.ValidationSummary()

            <div class="input-form">
                <div class="vertical-dashed"></div>
                
                <div class="msg-container">
                    <p class="msg-box regular round-corners-five"></p>
                </div>
                <div class="input-container fixed-height">
                    <label for="Title" class="rl-label">@Admin.Title</label>
                    <input type="text" id="Title" name="Title" placeholder="@Admin.Title" class="tooltipster" title="نام گالری ویدئو را نمایش می‌دهد"/>
                </div>
                
                <div class="msg-container">
                    <p class="msg-box regular round-corners-five"></p>
                </div>
                <div class="input-container fixed-height">
                    <label for="Order" class="rl-label">اولویت</label>
                    <input type="text" id="Order" name="Order" placeholder="الویت" class="tooltipster" title="نام گالری ویدئو را نمایش می‌دهد"/>
                </div>
                
                <div class="msg-container">
                    <p class="msg-box regular round-corners-five"></p>
                </div>
                <div class="input-container fixed-height">
                    <label for="files" class="rl-label tooltipster" title="بارگذاری ویدئو">بارگذاری ویدئو</label>
                    @Html.Partial(MVC.Shared.Views._FineUploaderTemplate)
                    <div name="files" id="files" data-on-load="uploaderCompanyVideo"></div>
                </div>

                <div class="input-container"></div>
            </div>
        </form>
        
        <div class="form-button-container">
            <button form="newCompanyVideo" type="submit" class="form-button right-form-btn ok-button round-corners-five disabled-btn-link" disabled="disabled" >
                <i class="fa fa-save"></i>
                <span>@Admin.Save</span>
            </button>
        </div>
    </div>
</div>

