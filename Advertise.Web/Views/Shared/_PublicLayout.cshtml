<!DOCTYPE html>
<html lang="fa-IR" prefix="og: http://ogp.me/ns#">
<head>
    <meta charset="utf-8">
    <title>@ViewBag.Title</title>
    <meta name="keywords" content="@ViewBag.Keywords">
    <meta name="description" content="@ViewBag.Description">
    <meta name="author" content="@Admin.SiteTitle">
    <meta name="thumbnail" content="@ViewBag.Thumbnail">
    <meta name="language" content="fa-IR,en-US">
    <meta name="document-type" content="Public">
    <meta name="document-rating" content="General">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0, user-scalable=no">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-touch-fullscreen" content="yes">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta property="place:location:latitude" content="35.6989079">
    <meta property="place:location:longitude" content="51.3916988">
    <meta property="business:contact_data:locality" content="تهران">
    <meta property="business:contact_data:country_name" content="ایران">
    <meta property="business:contact_data:phone_number" content="+98 21 66489436">
    <meta property="business:contact_data:website" content="http://Novinak.com">
    <meta property="business:contact_data:email" content="info@novinak.com">
    <meta property="og:site_name" content="NOVINAK"/>
    <meta property="og:title" content="@ViewBag.Title">
    <meta property="og:description" content="@ViewBag.Description">
    <meta name="application-name" content="Novinak"/>
    <meta name="msapplication-TileColor" content="#f00c0c"/>
    @RenderSection("seo", false)
    @RenderSection("og", false)
    <link rel="icon" href="/favicon.ico">
    @Styles.Render("~/bundles/landingstyles/css")
    @RenderSection("styles", false)
</head>
<body>
@if (ViewBag.PageName != null)
{
    <div id="PageName" data-on-load="loadViewType"  data-page-name="@ViewBag.PageName"></div>
}
@(User.Identity.IsAuthenticated ? Html.Action(MVC.User.UserHeader()) : Html.Partial(MVC.Shared.Views.SiteLayout._HeaderAnonymous))
@Html.Action(MVC.Home.MobileMenu())
@(User.Identity.IsAuthenticated ? Html.Action(MVC.Home.SideMenuRight()) : Html.Partial(MVC.Shared.Views.SiteLayout._SideMenuRightAnonymous))
@Html.Action(MVC.Home.MainMenu())
    @RenderSection("sitemap", false)
<div class="rendered-body">
    @RenderBody()
</div>
@Html.Partial(MVC.Shared.Views.SiteLayout.Public._PublicSubscribe)
@Html.Partial(MVC.Shared.Views.SiteLayout._Footer)
<div id="goUpBtn" class="tooltipster" title="@Admin.GoUp">
    <i class="fa fa-arrow-up fa-2x go-up-icon"></i>
</div>
<div class="shadow-film closed"></div>
<svg style="display: none;">
    <symbol id="svg-arrow" viewBox="0 0 3.923 6.64014" preserveAspectRatio="xMinYMin meet">
        <path d="M3.711,2.92L0.994,0.202c-0.215-0.213-0.562-0.213-0.776,0c-0.215,0.215-0.215,0.562,0,0.777l2.329,2.329
			L0.217,5.638c-0.215,0.215-0.214,0.562,0,0.776c0.214,0.214,0.562,0.215,0.776,0l2.717-2.718C3.925,3.482,3.925,3.135,3.711,2.92z"/>
    </symbol>
</svg>
<svg style="display: none;">
    <symbol id="svg-star" viewBox="0 0 10 10" preserveAspectRatio="xMinYMin meet">
        <polygon points="4.994,0.249 6.538,3.376 9.99,3.878 7.492,6.313 8.082,9.751 4.994,8.129 1.907,9.751
	2.495,6.313 -0.002,3.878 3.45,3.376 "/>
    </symbol>
</svg>
<svg style="display: none;">
    <symbol id="svg-plus" viewBox="0 0 13 13" preserveAspectRatio="xMinYMin meet">
        <rect x="5" width="3" height="13"/>
        <rect y="5" width="13" height="3"/>
    </symbol>
</svg>
@Scripts.Render("~/bundles/landingscripts/js")
@RenderSection("scripts", false)
@Html.Partial(MVC.Shared.Views._Noty)
<script type="text/javascript"> sideMenuNovinak(); </script>
@Html.Partial(MVC.Shared.Views.SiteLayout._Script)
</body>
</html>