        <h1>@if (Model.IsMine != true){<text>@Admin.ListMyFollowsCategory</text>}else{<text>@Admin.ListMyFollowsCategory</text>}</h1>
    </div>

    <div class="landing-grids-wrapper">
        <div class="product-list grid">
            <div class="landing-column-wrapper">
                @Html.Partial(MVC.CategoryFollow.Views._FollowListMore, Model.CategoryFollows)
