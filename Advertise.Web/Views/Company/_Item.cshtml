@* Generator: MvcView GeneratePrettyNames: true *@
@using Advertise.Core.Extensions
@using Advertise.Service.Managers.File
@using Advertise.Service.Services.Permissions
@model Advertise.Core.Models.Company.CompanyViewModel
<div class="landing-items nov-item-height-132">
    <div class="product-item squared-preview-image column landing-column">
        <div class="nov-item-header">
            <div class="action-section">
                @if (User.IsInRole(PermissionConst.CanCompanyEdit) || (Model.IsMine && User.IsInRole(PermissionConst.CanCompanyMyEdit)) || User.IsInRole(PermissionConst.CanCompanyEditApprove))
                {
                    <div class="item-edit-wrapper">
                        <i class="fa fa-pencil-square"></i>
                        <ul class="item-edit-list">
                            @if (User.IsInRole(PermissionConst.CanCompanyEdit))
                            {
                                <li>
                                    <a href="@Url.Action(MVC.Company.Edit(Model.Alias))">
                                        <span>@Admin.Edit</span>
                                        <i class="fa fa-pencil fa-flip-horizontal"></i>
                                    </a>
                                </li>
                            }
                            @if (User.IsInRole(PermissionConst.CanCompanyEditApprove))
                            {
                                <li>
                                    <a href="javascript:void(0)" data-on-click="ajaxSimple" data-param="@Url.Action(MVC.Company.ApproveAjax(Model.Id))">
                                        <span>@Admin.Approve</span>
                                        <i class="fa fa-check-circle"></i>
                                    </a>
                                </li>
                            }
                            @if (User.IsInRole(PermissionConst.CanCompanyEditApprove))
                            {
                                <li>
                                    <a href="javascript:void(0)" data-on-click="ajaxSimple" data-param="@Url.Action(MVC.Company.RejectAjax(Model.Id))">
                                        <span>@Admin.Ignore</span>
                                        <i class="fa fa-times-circle"></i>
                                    </a>
                                </li>
                            }
                        </ul>
                    </div>
                }
            </div>
            <div class="share-section">
                <div class="sharing-item-li">
                    <i class="fa fa-share-alt-square"></i>
                    <ul class="item-share-list">
                        <li>
                            <a href="@Url.Action(MVC.Company.Detail(Model.Alias, Model.Title.CastToSlug())).PlusWord("&text=").PlusWord(Model.Title).BeforeWord("https://telegram.me/share/url?url=https://novinak.com")">
                                <span>@Admin.Telegram</span>
                                <i class="sharings fa fa-telegram"></i>
                            </a>
                        </li>
                        <li>
                            <a href="@Url.Action(MVC.Company.Detail(Model.Alias, Model.Title.CastToSlug())).BeforeWord("https://plus.google.com/share?url=https://novinak.com")">
                                <span>@Admin.GPlus</span>
                                <i class="sharings fa fa-google-plus"></i>
                            </a>
                        </li>
                        <li>
                            <a href="@Url.Action(MVC.Company.Detail(Model.Alias, Model.Title.CastToSlug())).BeforeWord("https://www.facebook.com/sharer/sharer.php?u=https://novinak.com")">
                                <span>@Admin.Facebook2</span>
                                <i class="sharings fa fa-facebook"></i>
                            </a>
                        </li>
                        <li>
                            <a href="@Url.Action(MVC.Company.Detail(Model.Alias, Model.Title.CastToSlug())).BeforeWord("https://twitter.com/home?status=https://novinak.com")">
                                <span>@Admin.Twitter2</span>
                                <i class="sharings fa fa-twitter"></i>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="nov-item-body">
            <div class="image-section">
                <div class="product-preview-actions">
                    <figure class="product-preview-image">
                        <a href="@Url.Action(MVC.Company.Detail(Model.Alias, Model.Title.CastToSlug()))">
                            <div class="item-preview-image">
                                <noscript>
                                    <img src="@(Model.LogoFileName != null ? FileConst.ImagesWebPath.PlusWord(Model.LogoFileName) : FileConst.NoLogo)" alt="@(Model.LogoFileName != null ? Model.Title.PlusWord(" Company Image") : "product without any preview image")">
                                </noscript>
                                <img data-src="@(Model.LogoFileName != null ? FileConst.ImagesWebPath.PlusWord(Model.LogoFileName) : FileConst.NoLogo)" alt="@(Model.LogoFileName != null ? Model.Title.PlusWord(" Company Image") : "product without any preview image")">
                            </div>
                        </a>
                    </figure>
                </div>
            </div>
            <div class="caption-section">
                <a class="novinak-title-link" href="@Url.Action(MVC.Company.Detail(Model.Alias, Model.Title.CastToSlug()))">
                    <p class="novinak-title text-header">@(Model.Title ?? Admin.Untitled)</p>
                </a>
            </div>
            <div class="info-section">
                <div class="top-part">
                    <a>
                        <p>@Model.CategoryTitle</p>
                    </a>
                </div>
                <div class="middle-part">
                    <p>
                        <span id="FollowerCount">@Model.FollowerCount.ToString().PlusWord("   ")</span>
                        <span>@Admin.Followers</span>
                    </p>
                </div>
                <div class="bottom-part">
                    <p class="small-state">
                        <span>@Model.ProductCount.ToString().PlusWord("   ")</span>
                        <span>@L(Model.CategoryOption.Products)</span>
                    </p>
                </div>
            </div>
        </div>
        <div class="nov-item-footer">
            <hr class="line-separator item-footer">
            <div class="overview-section">
                <div class="image-part">
                    <figure class="user-avatar small">
                        <a href="javascript:void(0)">
                            <div class="novinak-image">
                                <noscript>
                                    <img @if (Model.UserAvatar != null) { <text> src="@FileConst.ImagesWebPath.PlusWord(Model.UserAvatar)" alt="@Model.Title.PlusWord(" ").PlusWord(Model.UserFullName)" </text> } else { <text> src="@FileConst.NoAvatarPth" alt="User Without Avatar" </text> }>
                                </noscript>
                                <img class="lazyload" @if (Model.UserAvatar != null) { <text> data-src="@FileConst.ImagesWebPath.PlusWord(Model.UserAvatar)" alt="@Model.Title.PlusWord(" ").PlusWord(Model.UserFullName)" </text> } else { <text> data-src="@FileConst.NoAvatarPth" alt="User Without Avatar" </text> }>
                            </div>
                        </a>
                    </figure>
                </div>
                <div class="caption-part">
                    <a href="javascript:void(0)" class="tooltipster">
                        <p class="text-header tiny">@Model.UserDisplayName</p>
                    </a>
                </div>
            </div>
            <div class="toggle-section follow-section">
                <div class="follow-button-wrapper">
                    <input id="Id" type="hidden" value="@Model.Id" />
                    <a @if (User.Identity.IsAuthenticated != true) { <text> href="@Url.Action(MVC.Account.EmailRegister())" </text> } else { <text> href="javascript:void(0)" data-on-click="ajaxToggleFollowCompany" data-follow="@Admin.Follow" data-unfollow="@Admin.Unfollow" </text> } class="follow-button @if (Model.InitFollow) {<text>followed-btn</text>} else {<text>unfollowed-btn</text>}">
                       <span>@(Model.InitFollow ? Admin.Unfollow : Admin.Follow)</span> 
                    </a>
                </div>
            </div>
        </div>
        <div class="clearboth"></div>
    </div>
</div>