@using Advertise.Service.Managers.File
@* Generator: MvcView GeneratePrettyNames: true *@
<div class="landing-items nov-item-height-031">
    <div class="product-item column landing-column">
        <div class="nov-item-body">
            <div class="image-section">
                <div class="product-preview-actions">
                    <figure class="product-preview-image">
                        <a href="@Url.Action(MVC.Product.Create())">
                            <div class="item-preview-image">
                                <img src="@FileConst.NewItem" alt="@Admin.NewProduct">
                            </div>
                        </a>
                    </figure>
                </div>
            </div>
            <div class="info-section">
                <div class="middle-part">
                    <a href="@Url.Action(MVC.Product.Create())" class="middle-part-link">
                        <p class="new-item-add">
                            <i class="fa fa-plus-square"></i>
                            <span>@Admin.NewProduct</span>
                        </p>
                    </a>
                </div>
            </div>
        </div>
        <div class="clearboth"></div>
    </div>
</div>