@* Generator: MvcView GeneratePrettyNames: true *@
@model IEnumerable<Advertise.Core.Models.CompanyAttachment.CompanyAttachmentViewModel>
<div class="headline simple primary">
    <h4>
        <i class="fa fa-paperclip"></i>
        <span>@Admin.Files</span>
    </h4>
</div>
@if (Model == null || Model.Any() != true)
{
    <div class="comment-list updating-section">
        <p>
            <i class="fa fa-battery-empty fa-flip-horizontal"></i>
            <span>@Admin.MessageSectionNoFile</span>
        </p>
        @if (ViewBag.IsMySelf)
        {
            <div class="btn-middle-wrapper">
                <a href="@Url.Action(MVC.CompanyAttachment.Create())" class="btn-middle blue-btn-middle round-corners-five">
                    <i class="fa fa-plus"></i>
                    <span>@Admin.CreateAttachment</span>
                </a>
            </div>
        }
    </div>
}
else
{
   <div class="product-showcase detail-case">
        <div id="productlistContainer" class="landing-items-wrapper landing-items-disp">
            <div class="product-list grid">
                <div class="landing-column-wrapper">
                    @if (ViewBag.IsMySelf)
                    {
                        @Html.Partial(MVC.CompanyAttachment.Views._AddItem)
                    }
                    @Html.Partial(MVC.CompanyAttachment.Views._ListMore, Model)
                </div>
            </div>
        </div>
    </div>
}
