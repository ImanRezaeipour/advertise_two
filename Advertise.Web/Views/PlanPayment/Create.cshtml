                    </label>
                    <input type="radio" id="GatewayZarinpal" name="Pay" value="1" class="gateway-radio">
                    <label class="gateway-label" for="GatewayZarinpal">
                        <img src="@FileConst.GatewayZarinpal" alt="@Admin.PaymentGatewayZarinpal" />
                    </label>
                </div>
            </div>
            <div class="input-container half discount-code-container">
                <label for="DiscountCode" class="rl-label">@Admin.DiscountCode</label>
                <input type="text" id="DiscountCode" class="discount-code-input" name="DiscountCode" placeholder="@Admin.DiscountCode" />
                <a id="DiscountCodeApply" href="javascript:void(0)" class="discount-code-apply" data-on-click="ajaxCheckPlanDiscount">@Admin.ApplyDiscount</a>
                <span class="discount-code-price"></span>
            </div>
            <div class="input-container">
                <label class="rl-label">@Admin.InvoicePurchase</label>
                <ul class="plan-invoice-table">
                    <li>
                        <span class="plan-invoice-title">@Admin.SelectedPlan</span>
                        <span id="PlanTitle" class="plan-invoice-value">-----</span>
                    </li>
                    <li>
                        <span class="plan-invoice-title">@Admin.ValidityDuration</span>
                        <span id="PlanValidity" class="plan-invoice-value">-----</span>
                    </li>
                    <li>
                        <span class="plan-invoice-title">@Admin.Price</span>
                        <span id="PlanPrice" class="plan-invoice-value">-----</span>
                    </li>
                    <li>
                        <span class="plan-invoice-title">@Admin.DiscountPercent</span>
                        <span id="PlanDiscountPercent" class="plan-invoice-value">-----</span>
                    </li>
                    <li>
                        <span class="plan-invoice-title">@Admin.Discount</span>
                        <span id="PlanDiscountPrice" class="plan-invoice-value">-----</span>
                    </li>
                    <li>
                        <span class="plan-invoice-title">@Admin.PaymentPrice</span>
                        <span id="PlanFinalPrice" class="plan-invoice-value">-----</span>
                    </li>
                </ul>
            </div>
            <div class="clearboth"></div>
        </form>

        <div class="plan-buttons-wrapper">
            <a class="plan-return-button" href="@Url.Action(MVC.Page.Costs())">
                <i class="fa fa-arrow-right"></i>
                <span>@Admin.Return</span>
            </a>
            <button type="submit" form="buyPlan" class="plan-cart-button">
                <i class="fa fa-shopping-cart fa-flip-horizontal"></i>
                <span>@Admin.PlanPurchase</span>
            </button>
        </div>
        <div class="clearboth"></div>
    </div>
</div>