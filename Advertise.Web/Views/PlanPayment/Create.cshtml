                        <li>
                            <span id="durationNineMonths">@Admin.MonthsNine</span>
                        </li>
                        <li>
                            <span>.......</span>
                        </li>
                        <li>
                            <span>.......</span>
                        </li>
                        <li>
                            <div class="outer-month">
                                <input class="plan-order-radio" type="radio" id="planType5" name="Code" value="Gold9">
                                <div class="inner-month">
                                    <span class="plan-pre-price">399,000 @Admin.Toman</span>
                                    <span class="plan-price">199,000 @Admin.Toman</span>
                                    <label class="plan-order-link golden-link" for="planType5" data-on-click="calcPlanInvoice">
                                        <i class="fa fa-shopping-cart fa-flip-horizontal"></i>
                                        <span>@Admin.PlanSelection</span>
                                    </label>
                                    <span class="plan-discount-tag">50%</span>
                                </div>
                            </div>
                        </li>
                    </ul>
                </li>
                <li class="golden-row">
                    <ul class="inner-order-plans">
                        <li>
                            <span id="durationOneYear">@Admin.MonthsYear</span>
                        </li>
                        <li>
                            <div class="outer-month">
                                <input class="plan-order-radio" type="radio" id="planType1" name="Code" value="Bronze12">
                                <div class="inner-month">
                                    <span class="plan-pre-price">99,000 @Admin.Toman</span>
                                    <span class="plan-price">49,000 @Admin.Toman</span>
                                    <label class="plan-order-link bronze-link" for="planType1" data-on-click="calcPlanInvoice">
                                        <i class="fa fa-shopping-cart fa-flip-horizontal"></i>
                                        <span>@Admin.PlanSelection</span>
                                    </label>
                                    <span class="plan-discount-tag">50%</span>
                                </div>
                            </div>
                        </li>
                        <li>
                            <div class="outer-month">
                                <input class="plan-order-radio" type="radio" id="planType3" name="Code" value="Silver12">
                                <div class="inner-month">
                                    <span class="plan-pre-price">349,000 @Admin.Toman</span>
                                    <span class="plan-price">179,000 @Admin.Toman</span>
                                    <label class="plan-order-link silver-link" for="planType3" data-on-click="calcPlanInvoice">
