                                    <span class="plan-price">99,000 @Admin.Toman</span>
                                    <label class="plan-order-link silver-link" for="planType2" data-on-click="calcPlanInvoice">
                                        <i class="fa fa-shopping-cart fa-flip-horizontal"></i>
                                        <span>@Admin.PlanSelection</span>
                                    </label>
                                    <span class="plan-discount-tag">50%</span>
                                </div>
                            </div>
                        </li>
                        <li>
                            <div class="outer-month">
                                <input class="plan-order-radio" type="radio" id="planType4" name="Code" value="Gold6">
