    ViewBag.Title = Admin.PlanPurchase;
}
<div class="profile-content plan-purchase-content">
    <div class="form-box-item profile-form">
        <h1>@Admin.PlanPurchase</h1>
        <form id="buyPlan" action="@Url.Action(MVC.PlanPayment.Create())" method="post" data-on-load="validatePlanPayment">
