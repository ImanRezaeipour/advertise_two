@* Generator: MvcView GeneratePrettyNames: true *@
@model Advertise.Core.Models.CategoryReview.CategoryReviewCreateViewModel
@{
    Layout = MVC.Shared.Views.SiteLayout.Panel._PanelLayout;
    ViewBag.Title = Admin.CreateCategoryReview;
}
<div class="dashboard-content">
    <div class="headline buttons primary">
        <h4>@Admin.CreateCategoryReview</h4>
    </div>
    <div class="form-box-item profile-form">
        <form id="newCategoryReview" action="@Url.Action(MVC.CategoryReview.Create())"  data-on-load="validateCategoryReview"  method="Post">
            @Html.AntiForgeryToken()
            @Html.ValidationSummary()

            <div class="input-form">
                <div class="vertical-dashed"></div>
                
                <div class="msg-container">
                    <p class="msg-box regular round-corners-five"></p>
                </div>
                <div class="input-container fixed-height">
                    <label for="CategoryId" class="rl-label tooltipster" title="@Admin.BeReviewedCategory">@Admin.Category</label>
                    <div id="CategoryTree" style="direction: rtl" class="tree" data-on-load="treeCategoryReview"></div>
                    <input type="hidden" name="CategoryId" id="CategoryId"/>
                </div>
                
                <div class="msg-container">
                    <p class="msg-box regular round-corners-five"></p>
                </div>
                <div class="input-container fixed-height">
                    <label for="Title" class="rl-label">@Admin.Title</label>
                    <input type="text" id="Title" name="Title" class="form-control tooltipster" placeholder="@Admin.Title" title="@Admin.ItShowsReviewTitle"/>
                </div>
                
                <div class="msg-container">
                    <p class="msg-box regular round-corners-five"></p>
                </div>
                <div class="input-container fixed-height">
                    <label for="Body" class="rl-label tooltipster" title="@Admin.ItDescribesReview">@Admin.FullExplanation</label>
                    <textarea id="Body" name="Body" data-on-load="editorCategoryReview"></textarea>
                </div>

                <div class="input-container"></div>
            </div>
        </form>
        
        <div class="form-button-container">
            <button form="newCategoryReview" type="submit" class="form-button right-form-btn ok-button round-corners-five disabled-btn-link" disabled="disabled" >
                <i class="fa fa-save"></i>
                <span>@Admin.Save</span>
            </button>
        </div>
    </div>
</div>
