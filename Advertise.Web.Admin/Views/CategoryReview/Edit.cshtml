@* Generator: MvcView GeneratePrettyNames: true *@
@model Advertise.Core.Models.CategoryReview.CategoryReviewEditViewModel
@{
    Layout = MVC.Shared.Views.SiteLayout.Panel._PanelLayout;
    ViewBag.Title = Admin.CategoryReviewEdit;
}
<div class="dashboard-content">
    <div class="headline buttons primary">
        <h4>@Admin.CategoryReviewEdit</h4>
    </div>
    <div class="form-box-item profile-form">
        <form id="editCategoryReview" data-on-load="validateCategoryReview" action="@Url.Action(MVC.CategoryReview.Edit())" method="Post">
            @Html.AntiForgeryToken()
            @Html.ValidationSummary()
            <input type="hidden" id="Id" name="Id" value="@Model.Id" />

            <div class="input-form">
                <div class="vertical-dashed"></div>
                
                <div class="msg-container">
                    <p class="msg-box regular round-corners-five"></p>
                </div>
                <div class="input-container fixed-height">
                    <label for="CategoryTree" class="rl-label tooltipster" title="@Admin.BeReviewedCategory">@Admin.Category</label>
                    <div id="CategoryTree" style="direction: rtl" class="tree" data-on-load="treeCategoryReview" data-param="edit"></div>
                    <input type="hidden" id="CategoryId" name="CategoryId" value="@Model.CategoryId"/>
                </div>
                
                <div class="msg-container">
                    <p class="msg-box regular round-corners-five"></p>
                </div>
                <div class="input-container fixed-height">
                    <label for="Title" class="rl-label">@Admin.Title</label>
                    <input type="text" id="Title" name="Title" value="@Model.Title" placeholder="@Admin.Title" class="tooltipster" title="@Admin.Title"/>
                </div>
                
                <div class="msg-container">
                    <p class="msg-box regular round-corners-five"></p>
                </div>
                <div class="input-container fixed-height">
                    <label for="IsActive" class="rl-label">@Admin.Status</label>
                    <input type="checkbox" id="IsActive" name="IsActive" value="true" checked="@Model.IsActive" class="tooltipster" title="@Admin.ItActivesOrDeactivesReview"/>
                    <input type="hidden" name="IsActive" value="false"/>
                </div>
                
                <div class="msg-container">
                    <p class="msg-box regular round-corners-five"></p>
                </div>
                <div class="input-container fixed-height">
                    <label for="Body" class="rl-label tooltipster" title="@Admin.ItDescribesReview">@Admin.FullExplanation</label>
                    <textarea id="Body" name="Body" data-on-load="editorCategoryReview" data-val="true" data-val-required="@Admin.RequiredExplain">@Model.Body</textarea>
                </div>

                <div class="input-container"></div>
            </div>
        </form>
        
        <div class="form-button-container">
            <button form="editCategoryReview" type="submit" class="form-button right-form-btn ok-button round-corners-five disabled-btn-link" disabled="disabled" >
                <i class="fa fa-save"></i>
                <span>@Admin.Save</span>
            </button>
        </div>
    </div>
</div>
