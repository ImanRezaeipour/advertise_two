@* Generator: MvcView GeneratePrettyNames: true *@
@model Advertise.Core.Models.Role.RoleEditViewModel
@{
    Layout = MVC.Shared.Views.SiteLayout.Panel._PanelLayout;
    ViewBag.Title = Admin.EditRole;
}
<div class="dashboard-content">
    <div class="headline buttons primary">
        <h4>@Admin.EditRole</h4>
    </div>
    <div class="form-box-item profile-form">
        <form id="editRole" action="@Url.Action(MVC.Role.Edit())" method="Post"  data-on-load="validateRole">
            <input type="hidden" id="Id" name="Id" value="@Model.Id"/>
            @Html.AntiForgeryToken()

            <div class="input-form">
                <div class="vertical-dashed"></div>
                
                <div class="msg-container">
                    <p class="msg-box regular round-corners-five"></p>
                </div>
                <div class="input-container fixed-height">
                    <label for="name" class="rl-label">@Admin.Title</label>
                    <input type="text" id="name" name="name" value="@Model.Name" placeholder="@Admin.Title"/>
                </div>
                
                <div class="msg-container">
                    <p class="msg-box regular round-corners-five"></p>
                </div>
                <div class="input-container fixed-height">
                    <label for="permissionTree" class="rl-label">@Admin.Accesss</label>
                    <div id="permissionTree" style="direction: rtl" class="tree" data-on-load="treeRole" data-param="edit"></div>
                    <input type="hidden" id="permissions" name="permissions" value=""/>
                </div>

                <div class="input-container"></div>
            </div>
        </form>
        
        <div class="form-button-container">
            <button form="editRole" type="submit" class="form-button right-form-btn ok-button round-corners-five disabled-btn-link" disabled="disabled" >
                <i class="fa fa-save"></i>
                <span>@Admin.Save</span>
            </button>
        </div>
    </div>
</div>