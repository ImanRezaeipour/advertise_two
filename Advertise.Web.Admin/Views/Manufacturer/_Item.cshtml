@* Generator: MvcView GeneratePrettyNames: true *@
@using System.Diagnostics
@using Advertise.Service.Services.Permissions
@model Advertise.Core.Models.Manufacturer.ManufacturerViewModel
<div class="landing-items nov-item-height-031">
    <div class="product-item column landing-column">
        <div class="nov-item-header">
            <div class="action-section">
                @if (User.IsInRole(PermissionConst.CanManufacturerDeleteAjax) || User.IsInRole(PermissionConst.CanManufacturerEdit))
                {
                    <div class="item-edit-wrapper">
                        <i class="fa fa-pencil-square"></i>
                        <ul class="item-edit-list">
                            <li>
                                <a href="@Url.Action(MVC.Manufacturer.Edit(Model.Id))">
                                    <span>@Admin.Edit</span>
                                    <i class="fa fa-pencil fa-flip-horizontal"></i>
                                </a>
                            </li>
                            @if (User.IsInRole(PermissionConst.CanManufacturerDeleteAjax))
                            {
                                <li>
                                    <a href="javascript:void(0)" data-on-click="removeConfirm" data-param="@Url.Action(MVC.Manufacturer.DeleteAjax(Model.Id))">
                                        <span>@Admin.Delete</span>
                                        <i class="fa fa-trash"></i>
                                    </a>
                                </li>
                            }
                        </ul>
                    </div>
                }
            </div>
        </div>
        <div class="nov-item-body">
            <div class="image-section">
                <div class="product-preview-actions"></div>
            </div>
            <div class="caption-section">
                <a class="novinak-title-link" href="#">
                    <p class="novinak-title text-header">@Model.Name</p>
                </a>
                <a class="novinak-title-link" href="#">
                    <p class="novinak-title text-header">
                        @Model.Country.Value
                    </p>
                </a>
            </div>
        </div>
        <div class="clearboth"></div>
    </div>
</div>