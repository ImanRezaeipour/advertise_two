@* Generator: MvcView GeneratePrettyNames: true *@
@model Advertise.Core.Models.ProductReview.ProductReviewEditViewModel
@{
    Layout = MVC.Shared.Views.SiteLayout.Panel._PanelLayout;
    ViewBag.Title = Admin.EditReview;
}
    <div class="dashboard-content">
    <div class="headline buttons primary">
        <h4>@Admin.EditReview</h4>
    </div>
    <div class="form-box-item profile-form">
        <form id="editProductReview" action="@Url.Action(MVC.ProductReview.Edit())" method="Post"  data-on-load="validateProductReview">
            @Html.AntiForgeryToken()
            @Html.ValidationSummary()
            <input type="hidden" id="Id" name="Id" value="@Model.Id" />

            <div class="input-form">
                <div class="vertical-dashed"></div>
                
                <div class="msg-container">
                    <p class="msg-box regular round-corners-five"></p>
                </div>
                <div class="input-container fixed-height">
                    <label class="rl-label">@Admin.Title : @Model.ProductTitle </label>
                </div>
                
                <div class="msg-container">
                    <p class="msg-box regular round-corners-five"></p>
                </div>
                <div clas="input-container fixed-height">
                    <label for="IsActive" class="rl-label tooltipster" title="@Admin.ItActivesOrDeactivesReview">@Admin.Status</label>
                    <input type="checkbox" id="IsActive" name="IsActive" value="true" checked="@Model.IsActive"/>
                    <input type="hidden" name="IsActive" value="false"/>
                </div>
                
                <div class="msg-container">
                    <p class="msg-box regular round-corners-five"></p>
                </div>
                <div class="input-container fixed-height">
                    <label for="Body" class="rl-label tooltipster" title="@Admin.ItShowsReviewText">@Admin.ReviewText</label>
                    <span class="field-validation-error" data-valmsg-for="Body" data-valmsg-replace="true"></span>
                    <textarea id="Body" name="Body" data-on-load="editorProductReview" data-val="true" data-val-required="@Admin.RequiredExplain">@Model.Body</textarea>
                </div>

                <div class="input-container"></div>
            </div>
        </form>
        
        <div class="form-button-container">
            <button form="editProductReview" type="submit" class="form-button right-form-btn ok-button round-corners-five disabled-btn-link" disabled="disabled" >
                <i class="fa fa-save"></i>
                <span>@Admin.Save</span>
            </button>
        </div>
    </div>
</div>