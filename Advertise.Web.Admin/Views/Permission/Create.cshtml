@model Advertise.Core.Models.Permission.PermissionCreateViewModel
@{
    Layout = MVC.Shared.Views.SiteLayout.Panel._PanelLayout;
    ViewBag.Title = "ایجاد دسترسی";
}
<div class="dashboard-content">
    <div class="headline buttons primary">
        <h4>ایجاد دسترسی</h4>
    </div>
    <div class="form-box-item profile-form">
        <form id="newPermission" action="@Url.Action(MVC.Permission.Create())" method="Post" data-on-load="validatePermission">
            @Html.AntiForgeryToken()

            <div class="input-form">
                <div class="vertical-dashed"></div>
                
                <div class="msg-container">
                    <p class="msg-box regular round-corners-five"></p>
                </div>
                <div class="input-container fixed-height">
                    <label for="ParentId" class="rl-label tooltipster" title="دسترسی ها">دسترسی ها</label>
                    <div id="PermissionTree" style="direction: rtl" class="tree" data-on-load="treePermission"></div>
                    <input type="hidden" id="ParentId" name="ParentId"/>
                </div>

                <div class="input-container"></div>
            </div>
        </form>
        
        <div class="form-button-container">
            <button form="newPermission" type="submit" class="form-button right-form-btn ok-button round-corners-five disabled-btn-link" disabled="disabled">
                <i class="fa fa-save"></i>
                <span>@Admin.Save</span>
            </button>
        </div>
    </div>
</div>