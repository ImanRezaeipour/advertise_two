@* Generator: MvcView GeneratePrettyNames: true *@
@model Advertise.Core.Models.CompanyReview.CompanyReviewCreateViewModel
@{
    Layout = MVC.Shared.Views.SiteLayout.Panel._PanelLayout;
    ViewBag.Title = Admin.CreateReview;
}
<div class="dashboard-content">
    <div class="headline buttons primary">
        <h4>@Admin.CreateReview</h4>
    </div>
    <div class="form-box-item profile-form">
        <form id="newCompanyReview" action="@Url.Action(MVC.CompanyReview.Create())" method="Post" data-on-load="validateCompanyReview">
            @Html.AntiForgeryToken()
            @Html.ValidationSummary()

            <div class="input-form">
                <div class="vertical-dashed"></div>
                
                <div class="msg-container">
                    <p class="msg-box regular round-corners-five"></p>
                </div>
                <div class="input-container fixed-height">
                    <label for="CompanyId" class="rl-label tooltipster" title="@Admin.ItShowsCompanyName">@Admin.BrandName</label>
                    <select name="CompanyId" id="CompanyId">
                        <option disabled="disabled">@Admin.BrandName</option>
                        @foreach (var companylist in Model.CompanyList)
                        {
                            <option value="@companylist.Value">@companylist.Text</option>
                        }
                    </select>
                </div>
                
                <div class="msg-container">
                    <p class="msg-box regular round-corners-five"></p>
                </div>
                <div class="input-container fixed-height">
                    <label for="Title" class="rl-label tooltipster" title="عنوان را وارد کنید">عنوان</label>
                    <input type="text" id="Title" name="Title"/>
                </div>
                
                <div class="msg-container">
                    <p class="msg-box regular round-corners-five"></p>
                </div>
                <div class="input-container fixed-height">
                    <label for="Body" class="rl-label tooltipster" title="@Admin.ItShowsReviewText">@Admin.ReviewText</label>
                    <textarea id="Body" name="Body" data-on-load="editorCompanyReview"></textarea>
                </div>

                <div class="input-container"></div>
            </div>
        </form>
        
        <div class="form-button-container">
            <button form="newCompanyReview" type="submit" class="form-button right-form-btn ok-button round-corners-five disabled-btn-link" disabled="disabled" >
                <i class="fa fa-save"></i>
                <span>@Admin.Save</span>
            </button>
        </div>
    </div>
</div>

