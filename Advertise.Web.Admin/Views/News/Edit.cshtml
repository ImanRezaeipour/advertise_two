@* Generator: MvcView GeneratePrettyNames: true *@
@model Advertise.Core.Models.News.NewsEditViewModel
@{
    Layout = MVC.Shared.Views.SiteLayout.Panel._PanelLayout;
    ViewBag.Title = Admin.NewsEdit;
}
<div class="dashboard-content">
    <div class="headline buttons primary">
        <h4>@Admin.NewsEdit</h4>
    </div>
    <div class="form-box-item profile-form">
        <form id="editNews" action="@Url.Action(MVC.News.Edit())" method="Post"  data-on-load="validateNews">>
            @Html.AntiForgeryToken()
            @Html.ValidationSummary()
            <input type="hidden" id="Id" name="Id" value="@Model.Id" />

            <div class="input-form">
                <div class="vertical-dashed"></div>
                
                <div class="msg-container">
                    <p class="msg-box regular round-corners-five"></p>
                </div>
                <div class="input-container fixed-height">
                    <label for="Title" class="rl-label">@Admin.Title</label>
                    <input type="text" id="Title" name="Title" value="@Model.Title" placeholder="@Admin.Title" class="tooltipster" title="@Admin.ItShowsNewsTitle"/>
                </div>
                
                <div class="msg-container">
                    <p class="msg-box regular round-corners-five"></p>
                </div>
                <div class="input-container fixed-height">
                    <label for="IsActive" class="rl-label tooltipster" title="@Admin.ItActivesOrDeactivesNews">@Admin.Status</label>
                    <input type="checkbox" id="IsActive" name="IsActive" value="true" checked="@Model.IsActive"/>
                    <input type="hidden" name="IsActive" value="false"/>
                </div>
                
                <div class="msg-container">
                    <p class="msg-box regular round-corners-five"></p>
                </div>
                <div class="input-container fixed-height">
                    <label for="Body" class="rl-label tooltipster" title="@Admin.ItShowsNewsText">@Admin.FullExplanation</label>
                    <textarea id="Body" name="Body" data-on-load="editorNews">@Html.Raw(HttpUtility.HtmlDecode(Model.Body))</textarea>
                </div>

                <div class="input-container"></div>
            </div>
        </form>
        
        <div class="form-button-container">
            <button form="editNews" type="submit" class="form-button right-form-btn ok-button round-corners-five disabled-btn-link" disabled="disabled" >
                <i class="fa fa-save"></i>
                <span>@Admin.Save</span>
            </button>
        </div>
    </div>
</div>
