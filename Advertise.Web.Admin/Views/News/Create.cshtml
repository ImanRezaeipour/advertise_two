@* Generator: MvcView GeneratePrettyNames: true *@
@model Advertise.Core.Models.News.NewsCreateViewModel
@{
    Layout = MVC.Shared.Views.SiteLayout.Panel._PanelLayout;
    ViewBag.Title = Admin.CreateNews;
}
<div class="dashboard-content">
    <div class="headline buttons primary">
        <h4>@Admin.CreateNews</h4>
    </div>
    <div class="form-box-item profile-form">
        <form id="newNews" action="@Url.Action(MVC.News.Create())" method="Post" data-on-load="validateNews">
            @Html.AntiForgeryToken()
            @Html.ValidationSummary()

            <div class="input-form">
                <div class="vertical-dashed"></div>
                
                <div class="msg-container">
                    <p class="msg-box regular round-corners-five"></p>
                </div>
                <div class="input-container fixed-height">
                    <label for="Title" class="rl-label">@Admin.Title</label>
                    <input type="text" id="Title" name="Title" class="form-control tooltipster" placeholder="@Admin.Title" title="@Admin.ItShowsNewsTitle"/>
                </div>
                
                <div class="msg-container">
                    <p class="msg-box regular round-corners-five"></p>
                </div>
                <div class="input-container fixed-height">
                    <label for="Body" class="rl-label tooltipster" title="@Admin.ItShowsNewsText">@Admin.FullExplanation</label>
                    <textarea id="Body" name="Body" data-on-load="editorNews"></textarea>
                </div>

                <div class="input-container"></div>
            </div>
        </form>
        
        <div class="form-button-container">
            <button form="newNews" type="submit" class="form-button right-form-btn ok-button round-corners-five disabled-btn-link" disabled="disabled" >
                <i class="fa fa-save"></i>
                <span>@Admin.Save</span>
            </button>
        </div>
    </div>
</div>
