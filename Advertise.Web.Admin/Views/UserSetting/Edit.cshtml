@* Generator: MvcView GeneratePrettyNames: true *@
@model Advertise.Core.Models.UserSetting.UserSettingEditViewModel
@{
    Layout = Model.IsMine != true ? MVC.Shared.Views.SiteLayout.Panel._PanelLayout : MVC.Shared.Views.SiteLayout.Profile._ProfileLayout;
    ViewBag.Title = "تنظیمات کاربری";
}
    <div class="dashboard-content">
    <div class="headline buttons primary">
        <h4>تنظیمات کاربری</h4>
    </div>
    <div class="form-box-item profile-form">
        <form id="editUserSetting" action="@if (Model.IsMine != true) {<text>@Url.Action(MVC.UserSetting.Edit())</text>} else {<text>@Url.Action(MVC.UserSetting.MyEdit())</text>}" method="Post" data-on-load="validateUserSetting">
            @Html.AntiForgeryToken()
            <input type="hidden" id="Id" name="Id" value="@Model.Id" />
         
            <div class="input-form">
                <div class="vertical-dashed"></div>
                
                <div class="msg-container">
                    <p class="msg-box regular round-corners-five"></p>
                </div>
                <div class="input-container fixed-height">
                    <label for="Language" class="rl-label">@Admin.Languages</label>
                    <select id="Language" name="Language">
                        <option disabled="disabled">@Admin.Language</option>
                        @foreach (var lang in Model.LanguageList)
                        {
                            <option value="@lang.Value" @if (Model.Language.ToString() == lang.Value){<text> selected</text>}>@lang.Text</option>
                        }
                    </select>
                </div>
                
                <div class="msg-container">
                    <p class="msg-box regular round-corners-five"></p>
                </div>
                <div class="input-container fixed-height">
                    <label for="Theme" class="rl-label">تم </label>
                    <select id="Theme" name="Theme">
                        <option disabled="disabled">تم</option>
                        @foreach (var theme in Model.ThemeList)
                        {
                            <option value="@theme.Value" @if (Model.Theme.ToString() == theme.Value){<text> selected</text>}>@theme.Text</option>
                        }
                    </select>
                </div>

                <div class="input-container"></div>
            </div>
        </form>
        
        <div class="form-button-container">
            <button form="editUserSetting" type="submit" class="form-button right-form-btn ok-button round-corners-five disabled-btn-link" disabled="disabled" >
                <i class="fa fa-save"></i>
                <span>@Admin.Save</span>
            </button>
        </div>
    </div>
</div>