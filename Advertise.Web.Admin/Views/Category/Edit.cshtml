@* Generator: MvcView GeneratePrettyNames: true *@
@model Advertise.Core.Models.Category.CategoryEditViewModel
@{
    Layout = MVC.Shared.Views.SiteLayout.Panel._PanelLayout;
    ViewBag.Title = Admin.CategoryEdit;
}
<div class="dashboard-content">
    <div class="headline buttons primary">
        <h4>@Admin.Edit</h4>
    </div>
    <div class="form-box-item profile-form">
        <form id="editCategory" action="@Url.Action(MVC.Category.Edit())" data-on-load="validateCategory" method="Post">
            @Html.AntiForgeryToken()
            @Html.ValidationSummary()
            <input type="hidden" id="categoryId" name="categoryId" value="@Model.Id" />
            <input type="hidden" id="Id" name="Id" value="@Model.Id" />

            <div class="input-form">
                <div class="vertical-dashed"></div>

                <div class="msg-container">
                    <p class="msg-box regular round-corners-five"></p>
                </div>
                <div class="input-container fixed-height">
                    <label for="ParentId" class="rl-label tooltipster" title="@Admin.CategoryIncludingNewCategory">@Admin.Category</label>
                    <div id="CategoryTree" style="direction: rtl" class="tree" data-on-load="treeCategory"></div>
                    <input type="hidden" id="ParentId" name="ParentId" />
                </div>

                <div class="msg-container">
                    <p class="msg-box regular round-corners-five"></p>
                </div>
                <div class="input-container fixed-height">
                    <label for="Title" class="rl-label">@Admin.Title</label>
                    <input type="text" id="Title" name="Title" placeholder="@Admin.Title" value="@Model.Title" class="tooltipster" title="@Admin.ItShowsCategoryName" />
                </div>

                <div class="msg-container">
                    <p class="msg-box regular round-corners-five"></p>
                </div>
                <div class="input-container fixed-height">
                    <label for="Description" class="rl-label">@Admin.Description</label>
                    <input type="text" id="Description" name="Description" placeholder="@Admin.Description" value="@Model.Description" class="form-control tooltipster" title="@Admin.ItDescribesCategory" />
                </div>

                <div class="msg-container">
                    <p class="msg-box regular round-corners-five"></p>
                </div>
                <div class="input-container fixed-height">
                    <label for="Order" class="rl-label">@Admin.Priority</label>
                    <input type="text" id="Order" name="Order" placeholder="@Admin.Priority" value="@Model.Order" class="form-control" />
                </div>

                <div class="msg-container">
                    <p class="msg-box regular round-corners-five"></p>
                </div>
                <div class="input-container fixed-height">
                    <label for="CategoryOption" class="rl-label">@Admin.CategoryGroup</label>
                    <select id="CategoryOption" name="CategoryOptionList.Title">
                        <option>-- @Admin.Choose --</option>
                        @foreach (var option in Model.CategoryOptionList)
                        {
                            <option value="@option.Value">@option.Text</option>
                        }
                    </select>
                </div>

                <div class="msg-container">
                    <p class="msg-box regular round-corners-five"></p>
                </div>
                <div class="input-container fixed-height">
                    <label for="Alias" class="rl-label">@Admin.AliasTitle</label>
                    <input type="text" id="MetaTitle" name="MetaTitle" placeholder="@Admin.AliasTitle" value="@Model.MetaTitle" class="form-control" />
                </div>

                <div class="msg-container">
                    <p class="msg-box regular round-corners-five"></p>
                </div>
                <div class="input-container fixed-height">
                    <label for="Alias" class="rl-label">@Admin.AliasUrl</label>
                    <input type="text" id="Alias" name="Alias" placeholder="@Admin.AliasUrl" value="@Model.Alias" class="form-control" />
                </div>

                <div class="msg-container">
                    <p class="msg-box regular round-corners-five"></p>
                </div>
                <div class="input-container fixed-height">
                    <label for="files" class="rl-label tooltipster" title="@Admin.ItChoosesImage">@Admin.UploadImage</label>
                    @Html.Partial(MVC.Shared.Views.FineUploaderTemplates._FineUploaderTemplate)
                    <div name="files" id="files" data-on-load="uploaderCategory"></div>
                </div>

                <div class="msg-container">
                    <p class="msg-box regular round-corners-five"></p>
                </div>
                <div clas="input-container fixed-height">
                    <label for="IsActive" class="rl-label">@Admin.Status</label>
                    <input type="checkbox" id="IsActive" name="IsActive" value="true" checked="@Model.IsActive" class="tooltipster" title="@Admin.ItActivesOrDeactivesCategory" />
                    <input type="hidden" name="IsActive" value="false" />
                </div>

                <div class="input-container"></div>
            </div>
        </form>

        <div class="form-button-container">
            <button form="editCategory" type="submit" class="form-button right-form-btn ok-button round-corners-five disabled-btn-link" disabled="disabled">
                <i class="fa fa-save"></i>
                <span>@Admin.Save</span>
            </button>
        </div>
    </div>
</div>