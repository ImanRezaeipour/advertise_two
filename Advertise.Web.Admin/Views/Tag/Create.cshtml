@* Generator: MvcView GeneratePrettyNames: true *@
@model Advertise.Core.Models.Tag.TagCreateViewModel
@{
    Layout = MVC.Shared.Views.SiteLayout.Panel._PanelLayout;
    ViewBag.Title = Admin.CreateTag;
}
<div class="dashboard-content">
    <div class="headline buttons primary">
        <h4>@Admin.CreateTag</h4>
    </div>
    <div class="form-box-item profile-form">
        <form id="newTag" action="@Url.Action(MVC.Tag.Create())" method="Post" data-on-load="validateTag">
            @Html.AntiForgeryToken()

            <div class="input-form">
                <div class="vertical-dashed"></div>
                
                <div class="msg-container">
                    <p class="msg-box regular round-corners-five"></p>
                </div>
                <div class="input-container fixed-height">
                    <label for="Title" class="rl-label">@Admin.Title</label>
                    <input type="text" id="Title" name="Title" placeholder="@Admin.Title"/>
                </div>
                
                <div class="msg-container">
                    <p class="msg-box regular round-corners-five"></p>
                </div>
                <div class="input-container fixed-height">
                    <label for="Color" class="rl-label">@Admin.Color</label>
                    <select id="Color" name="Color">
                        @foreach (var color in Model.ColorTypeList)
                        {
                            <option value="@color.Value">@color.Text</option>
                        }
                    </select>
                </div>
                
                <div class="msg-container">
                    <p class="msg-box regular round-corners-five"></p>
                </div>
                <div class="input-container fixed-height">
                    <label for="Description" class="rl-label">@Admin.Description</label>
                    <input type="text" id="Description" name="Description" placeholder="@Admin.Description"/>
                </div>
                
                <div class="msg-container">
                    <p class="msg-box regular round-corners-five"></p>
                </div>
                <div class="input-container fixed-height">
                    <label for="CostValue" class="rl-label">@Admin.Price</label>
                    <input type="text" id="CostValue" name="CostValue" placeholder="@Admin.Price"/>
                </div>
                
                <div class="msg-container">
                    <p class="msg-box regular round-corners-five"></p>
                </div>
                <div class="input-container fixed-height">
                    <label for="DurationDay" class="rl-label">@Admin.DurationOfUse</label>
                    <input type="text" id="DurationDay" name="DurationDay" placeholder="@Admin.DurationOfUse"/>
                </div>
                
                <div class="msg-container">
                    <p class="msg-box regular round-corners-five"></p>
                </div>
                <div class="input-container fixed-height">
                    @Html.Partial(MVC.Shared.Views.FineUploaderTemplates._FineUploaderTemplate)
                    <div name="file" id="file" data-on-load="uploaderTag"></div>
                </div>

                <div class="input-container"></div>
            </div>
        </form>
        
        <div class="form-button-container">
            <button form="newTag" type="submit" class="form-button right-form-btn ok-button round-corners-five disabled-btn-link" disabled="disabled"  onclick="javascript: form.action = '@Url.Action(MVC.Tag.Create())';">
                <i class="fa fa-save"></i>
                <span>@Admin.Save</span>
            </button>
        </div>
    </div>
</div>