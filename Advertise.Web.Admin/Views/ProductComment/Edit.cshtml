@model Advertise.Core.Models.ProductComment.ProductCommentEditViewModel
@{
    Layout = MVC.Shared.Views.SiteLayout.Panel._PanelLayout;
    ViewBag.Title = Admin.CommentEdit;
}
<div class="dashboard-content">
    <div class="headline buttons primary">
        <h4>@Admin.CommentEdit</h4>
    </div>
    <div class="form-box-item profile-form">
        <form id="editProductComment" action="" method="Post" data-on-load="validateProductComment">
            @Html.AntiForgeryToken()
            @Html.ValidationSummary()
            <input type="hidden" id="Id" name="Id" value="@Model.Id" />

            <div class="input-form">
                <div class="vertical-dashed"></div>
                
                <div class="msg-container">
                    <p class="msg-box regular round-corners-five"></p>
                </div>
                <div class="input-container fixed-height">
                    <label for="Body" class="rl-label">@Admin.CommentText</label>
                    <textarea id="Body" name="Body">@Model.Body</textarea>
                </div>

                <div class="input-container"></div>
            </div>
        </form>
        
        <div class="form-button-container">
            <button form="editProductComment" type="submit" class="form-button right-form-btn ok-button round-corners-five disabled-btn-link" onclick="javascript: form.action = '@Url.Action(MVC.ProductComment.Edit())';">
                <i class="fa fa-save"></i>
                <span>@Admin.Save</span>
            </button>
            <button form="editProductComment" type="submit" class="form-button right-form-btn ok-button round-corners-five disabled-btn-link" onclick="javascript: form.action = '@Url.Action(MVC.ProductComment.EditApprove())';">
                <i class="fa fa-save"></i>
                <span>@Admin.ConfirmAndSave</span>
            </button>
            <button form="editProductComment" type="submit" class="form-button right-form-btn ok-button round-corners-five disabled-btn-link" onclick="javascript: form.action = '@Url.Action(MVC.ProductComment.EditReject())';">
                <i class="fa fa-save"></i>
                <span>@Admin.RejectAndSave</span>
            </button>
        </div>
    </div>
</div>