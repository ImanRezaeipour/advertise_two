@model Advertise.Core.Models.Report.ReportCreateViewModel
@{
    Layout = MVC.Shared.Views.SiteLayout.Panel._PanelLayout;
    ViewBag.Title = "افزودن گزارش";
    ViewBag.PageName = "ReportCreate";
}
<div class="dashboard-content">
    <div class="headline buttons primary">
        <h4>افزودن گزارش</h4>
    </div>
    <div class="form-box-item profile-form">
        <form id="newReport" action="@Url.Action(MVC.Report.Create())" method="Post" enctype="multipart/form-data" data-on-load="validateReport">
            @Html.AntiForgeryToken()
            @Html.ValidationSummary()

            <div class="input-form">
                <div class="vertical-dashed"></div>
                
                <div class="msg-container  fixed-height">
                    <p class="msg-box regular round-corners-five"></p>
                </div>
                <div class="input-container fixed-height">
                    <label for="ParentId" class="rl-label tooltipster" title="@Admin.CategoryIncludingNewCategory">@Admin.Category</label>
                    <div id="ReportTree" style="direction: rtl" class="tree tooltipster" data-on-load="treeReport"></div>
                    <input type="hidden" id="ParentId"  name="ParentId"/>
                </div>
                <div class="msg-container">
                    <p class="msg-box regular round-corners-five"></p>
                </div>  
                <div class="input-container fixed-height">
                    <label for="Name" class="rl-label">نام گزارش</label>
                    <input type="text" id="Name" name="Name" placeholder="نام گزارش" class="tooltipster" title="نام گزارش"/>
                </div>
                
                <div class="msg-container">
                    <p class="msg-box regular round-corners-five"></p>
                </div>
                <div class="input-container fixed-height">
                    <label for="Title" class="rl-label">عنوان گزارش</label>
                    <input type="text" id="Title" name="Title" placeholder="عنوان گزارش" class="tooltipster" title="عنوان گزارش"/>
                </div>
                
                <div class="msg-container">
                    <p class="msg-box regular round-corners-five"></p>
                </div>
                <div class="input-container fixed-height">
                    <label for="Description" class="rl-label">توضیحات</label>
                    <input type="text" id="Description" name="Description" placeholder="توضیحات" class="tooltipster" title="توضیحات"/>
                </div>
                
                <div class="msg-container">
                    <p class="msg-box regular round-corners-five"></p>
                </div>
                <div class="input-container fixed-height">
                    <label for="contentFile" class="rl-label">فایل گزارش</label>
                    <input type="file" id="contentFile" name="contentFile" placeholder="فایل گزارش" class="tooltipster" title="فایل گزارش"/>
                </div>

                <div class="input-container"></div>
            </div>
        </form>
        
        <div class="form-button-container">
            <button form="newReport" type="submit" class="form-button right-form-btn ok-button round-corners-five disabled-btn-link" disabled="disabled">
                <i class="fa fa-save"></i>
                <span>@Admin.Save</span>
            </button>
        </div>
    </div>
</div>
