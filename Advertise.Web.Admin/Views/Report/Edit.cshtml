@model Advertise.Core.Models.Report.ReportEditViewModel
@{
    Layout = MVC.Shared.Views.SiteLayout.Panel._PanelLayout;
    ViewBag.Title = "افزودن گزارش";
    ViewBag.PageName = "ReportCreate";
}
<div class="dashboard-content">
    <div class="headline buttons primary">
        <h4>ویرایش گزارش</h4>
    </div>
    <div class="form-box-item profile-form">
        <form id="editReport" action="@Url.Action(MVC.Report.Edit())" method="Post" enctype="multipart/form-data" data-on-load="validateReport">
            @Html.AntiForgeryToken()
            @Html.ValidationSummary()

            <div class="input-form">
                <div class="vertical-dashed"></div>
                
                <div class="msg-container">
                    <p class="msg-box regular round-corners-five"></p>
                </div>
                <div class="input-container fixed-height">
                    <label for="Name" class="rl-label">نام گزارش</label>
                    <input type="text" id="Name" name="Name" value="@Model.Name" placeholder="نام گزارش" class="tooltipster" title="نام گزارش"/>
                </div>
                
                <div class="msg-container">
                    <p class="msg-box regular round-corners-five"></p>
                </div>
                <div class="input-container fixed-height">
                    <label for="Title" class="rl-label">عنوان گزارش</label>
                    <input type="text" id="Title" name="Title" value="@Model.Title" placeholder="عنوان گزارش" class="tooltipster" title="عنوان گزارش"/>
                </div>
                
                <div class="msg-container">
                    <p class="msg-box regular round-corners-five"></p>
                </div>
                <div class="input-container fixed-height">
                    <label for="Description" class="rl-label">توضیحات</label>
                    <input type="text" id="Description" name="Description" value="@Model.Description" placeholder="توضیحات" class="tooltipster" title="توضیحات"/>
                </div>
                
                <div class="msg-container">
                    <p class="msg-box regular round-corners-five"></p>
                </div>
                <div class="input-container fixed-height">
                    <label for="ContentFile" class="rl-label">فایل گزارش</label>
                    <input type="file" id="ContentFile" name="ContentFile" value="@Model.ContentFile" placeholder="فایل گزارش" class="tooltipster" title="فایل گزارش"/>
                </div>

                <div class="input-container"></div>
            </div>
        </form>
        
        <div class="form-button-container">
            <button form="editReport" type="submit" class="form-button right-form-btn ok-button round-corners-five disabled-btn-link" disabled="disabled">
                <i class="fa fa-save"></i>
                <span>@Admin.Save</span>
            </button>
        </div>
    </div>
</div>
